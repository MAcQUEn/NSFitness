<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NS_Home"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dee5ef"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/corner_border"
            android:weightSum=".3">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="140dp"

                android:background="@drawable/newlogo"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to NS Fitness"
            android:textColor="@color/red"
            android:padding="5dp"
            android:textSize="18dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum=".7"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/Besic"
                    android:layout_width="362dp"
                    android:layout_height="135dp"
                    android:layout_weight="0.17"

                    android:background="@drawable/round_card" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Besic"
                        android:textSize="30dp"
                        android:gravity="right"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

            </LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/Beginer"
                    android:layout_width="362dp"
                    android:layout_height="135dp"
                    android:layout_weight="0.17"

                    android:background="@drawable/round_card" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beginar"
                        android:textSize="30dp"
                        android:gravity="right"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

            </LinearLayout> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/Intermediate"
                    android:layout_width="362dp"
                    android:layout_height="135dp"
                    android:layout_weight="0.17"

                    android:background="@drawable/round_card" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Internediate"
                        android:textSize="30dp"
                        android:gravity="right"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

            </LinearLayout> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/Advance"
                    android:layout_width="362dp"
                    android:layout_height="135dp"
                    android:layout_weight="0.17"

                    android:background="@drawable/round_card" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Advance"
                        android:textSize="30dp"
                        android:gravity="right"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

            </LinearLayout> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                        android:id="@+id/Protin"
                    android:layout_width="362dp"
                    android:layout_height="135dp"
                    android:layout_weight="0.17"

                    android:background="@drawable/round_card" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Protin And Acessory"
                        android:textSize="30dp"
                        android:gravity="right"/>
                </LinearLayout>
                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</ScrollView>